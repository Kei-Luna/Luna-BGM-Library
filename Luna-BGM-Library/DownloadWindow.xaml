<Window x:Class="LunaBgmLibrary.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download BGM Files" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkBackgroundBrush}" 
        Foreground="{StaticResource TextPrimaryBrush}"
        AllowsTransparency="False"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select Games to Download:" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,16" 
                   Foreground="{StaticResource TextPrimaryBrush}"/>
        
        <Border Grid.Row="1" 
                Style="{StaticResource ModernCardStyle}"
                Margin="0,0,0,16">
            <ScrollViewer>
                <ItemsControl x:Name="GamesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="GameCheckBox"
                                      Content="{Binding Name}"
                                      IsChecked="{Binding IsSelected}"
                                      Margin="8"
                                      FontSize="14"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      Style="{StaticResource ModernCheckBoxStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <ProgressBar x:Name="DownloadProgress" 
                     Grid.Row="2"
                     Height="20"
                     Margin="0,0,0,16"
                     Visibility="Collapsed"
                     Style="{StaticResource ModernProgressBarStyle}"/>
        
        <TextBlock x:Name="StatusText" 
                   Grid.Row="2"
                   Text=""
                   Margin="0,0,0,16"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   Visibility="Collapsed"/>
        
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="DownloadButton"
                    Content="Download"
                    Width="100" Height="35"
                    Margin="0,0,8,0"
                    Click="DownloadButton_Click"
                    Style="{StaticResource ModernButtonStyle}"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100" Height="35"
                    Click="CancelButton_Click"
                    Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>